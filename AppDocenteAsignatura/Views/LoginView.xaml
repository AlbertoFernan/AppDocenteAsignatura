<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppDocenteAsignatura.Views.LoginView"
              xmlns:vm="clr-namespace:AppDocenteAsignatura.ViewModels"
             Title="LoginView" BackgroundColor="#181823"  Shell.NavBarIsVisible="False" NavigationPage.HasNavigationBar="False" >
    <ContentPage.BindingContext>
        <vm:DocenteAsignaturaViewModel></vm:DocenteAsignaturaViewModel>
    </ContentPage.BindingContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.80*"></RowDefinition>
            <RowDefinition Height="0.20*"></RowDefinition>
        </Grid.RowDefinitions>
    <FlexLayout  VerticalOptions="Center" Grid.Row="0"     Direction="Column" Margin="20">
        <Label HorizontalOptions="Center">Inicio de sesion</Label>
        <Label>Correo:</Label>
        <Entry Text="{Binding loginUser.Usuario1}"   ></Entry>
        <Label>Contraseña:</Label>
            <Entry Text="{Binding loginUser.Contraseña}" ></Entry>

        </FlexLayout  >
        <Button BackgroundColor="#537FE7" Command="{Binding LoginCommand}" Grid.Row="1" TextColor="White" BorderColor="White"   Text="Ingresar"    HorizontalOptions="Center" VerticalOptions="Center"></Button>
    </Grid>
</ContentPage>