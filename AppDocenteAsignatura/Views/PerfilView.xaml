<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppDocenteAsignatura.Views.PerfilView"
             Title="Perfil del docente">
    <Frame Margin="20" CornerRadius="20" BackgroundColor="#39579E">
    <VerticalStackLayout>
        <Image Source="user.png"></Image>
        <Label FontSize="Large"
            Text="{Binding docente.Nombre}"
           
            HorizontalOptions="Center" />
            <Label FontSize="Large"
            Text="{Binding docente.ApellidoPaterno}"
           
            HorizontalOptions="Center" />
            <Label FontSize="Large"
            Text="{Binding docente.ApellidoMaterno}"
           
            HorizontalOptions="Center" />
            <Label  FontSize="Medium"
            Text="{Binding docente.Correo}"
           
            HorizontalOptions="Center" />
            <Label FontSize="Large"
            Text="{Binding docente.Telefono}"
           
            HorizontalOptions="Center" />
            <Label FontSize="Large"
            Text="{Binding docente.Edad}"
           
            HorizontalOptions="Center" />
        </VerticalStackLayout>
    </Frame>
</ContentPage>